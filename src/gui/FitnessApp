import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
import core.*;
import database.*;
import utils.*;
import visualization.*;

public class FitnessApp extends JFrame {

    private JTabbedPane tabs;
    private JPanel startPanel, loginPanel, registerPanel, mainmenuPanel, fitnessPanel, trackerPanel, profilePanel;
    private JButton loginButton, registerButton;
    private JTextField usernameField, passwordField;
    //private JRadioButton exerciseRadio, mealRadio;
    //private ButtonGroup preferenceGroup;

    //GUI Structure:
    //startPanel allows user to choose login or register
    //loginPanel & registerPanel self explanatory. Successful login/register brings user to mainmenuPanel
    //mainmenuPanel lets user choose fitnessPanel, trackerPanel, and profilePanel
        //fitnessPanel - further separated into exercises & meals
        //trackerPanel - 
        //profilePanel - fetches user data. Edit button allows user to edit info
        //logoutButton - self explanatory

    public FitnessApp() {
        super("Fitness App");
        setLayout(new BorderLayout());

        // Initialize empty panels
        fitnessPanel = new JPanel();
        trackerPanel = new JPanel();
        profilePanel = new JPanel();

        // Create tabbed pane
        tabs = new JTabbedPane();
        tabs.add("Fitness", fitnessePanel);
        tabs.add("Tracker", trackerPanel();
        tabs.setVisible(false); // initially hide tabs

        add(startPanel = createStartPanel(), BorderLayout.CENTER);

        setVisible(true);
        setSize(400, 300);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
    }

    private JPanel createStartPanel() {
        JPanel panel = new JPanel();

        loginButton = new JButton("Login");
        loginButton.addActionListener(e -> {
            return createLoginPanel();
        });
        panel.add(loginButton);

        registerButton = new JButton("Register");
        registerButton.addActionListener(e -> {
            return createRegisterPanel();
        });
        panel.add(registerButton);

        return panel;
    }

    private JPanel createLoginPanel() {
        JPanel panel = new JPanel();

        panel.add(new JLabel("Username:"));
        usernameField = new JTextField(15);
        panel.add(usernameField);

        panel.add(new JLabel("Password:"));
        passwordField = new JPasswordField(15);
        panel.add(passwordField);

        loginButton = new JButton("Login");
        loginButton.addActionListener(e -> {
            /*
            if (username == database.users.getUsername("username") {
                if (password == database.users.getPassword("password") {
                    login
                }
            }
            else {
                error
            }
            */
        });
        panel.add(loginButton);

        return panel;
    }

    private JPanel createRegisterPanel() {
        JPanel panel = new JPanel();

        panel.add(new JLabel("Username:"));
        usernameField = new JTextField(15);
        panel.add(usernameField);

        panel.add(newJLabel("Email:"));
        emailField = new JTextField(15);
        panel.add(emailField);

        panel.add(newJLabel("First Name:"));
        firstnameField = new JTextField(15);
        panel.add(firstnameField);

        panel.add(newJLabel("Last Name:"));
        lastnameField = new JTextField(15);
        panel.add(lastnameField);

        panel.add(new JLabel("Password:"));
        passwordField = new JPasswordField(15);
        panel.add(passwordField);

        registerButton = new JButton("Register");
        registerButton.addActionListener(e -> {
            /*
            if (username != database.users.getUsername("username") {
                if (password contains num, char, special char) {
                    register
                }
            }
            else {
                error
            }
            */
        });
        panel.add(registerButton);

        return panel;
    }

    private JPanel createMainmenuPanel() {
        JPanel panel = new JPanel();

        fitnessButton = new JButton("Fitness");
        fitnessButton.addActionListener(e -> {
            return createFitnessPanel();
        });

        trackerButton = new JButton("Tracker");
        trackerButton.addActionListener(e -> {
            return createTrackerPanel();
        });

        profileButton = new JButton("Profile");
        profileButton.addActionListener(e -> {
            return createProfilePanel();
        });

        logoutButton = new JButton("Logout");
        loginButton.addActionListener(e -> {
            //clear current user info
            //return to startPanel
        });
    }

    private JPanel OLDcreateLoginPanel() {
        JPanel panel = new JPanel();

        panel.add(new JLabel("Username:"));
        usernameField = new JTextField(15);
        panel.add(usernameField);

        panel.add(new JLabel("Password:"));
        passwordField = new JPasswordField(15);
        panel.add(passwordField);

        exerciseRadio = new JRadioButton("Show Exercises", true);
        panel.add(exerciseRadio);

        mealRadio = new JRadioButton("Show Meals");
        panel.add(mealRadio);

        preferenceGroup = new ButtonGroup();
        preferenceGroup.add(exerciseRadio);
        preferenceGroup.add(mealRadio);

        loginButton = new JButton("Login");
        loginButton.addActionListener(e -> {
            // Implement login logic
            // On success, populate chosen panel and show tabs
            if (exerciseRadio.isSelected()) {
                exercisePanel.add(new JLabel("Exercises:"));
                exercisePanel.add(new JList<>(new String[]{"Running", "Swimming", "Cycling", "Yoga", "Weightlifting"}));
            } else {
                mealPanel.add(new JLabel("Meals:"));
                mealPanel.add(new JList<>(new String[]{"Breakfast", "Lunch", "Dinner", "Snacks"}));
            }
            tabs.setVisible(true);
            panel.setVisible(false);
        });
        panel.add(loginButton);

        registerButton = new JButton("Register");
        registerButton.addActionListener(e -> {
            // Implement register logic
            // On success, populate chosen panel and show tabs
            if (exerciseRadio.isSelected()) {
                exercisePanel.add(new JLabel("Exercises:"));
                exercisePanel.add(new JList<>(new String[]{"Running", "Swimming", "Cycling", "Yoga", "Weightlifting"}));
            } else {
                mealPanel.add(new JLabel("Meals:"));
                mealPanel.add(new JList<>(new String[]{"Breakfast", "Lunch", "Dinner", "Snacks"}));
            }
            tabs.setVisible(true);
            panel.setVisible(false);
        });
        panel.add(registerButton);

        return panel;
    }

    public static void main(String[] args) {
        new FitnessApp();
    }
}
